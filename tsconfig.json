{
  "compilerOptions": {
	"target": "es5",
	"module": "ESNext",
	"allowJs": false,
	"strict": true,
    "baseUrl": "./",
	"paths": {
      "lib": ["./lib"],
	  "test": ["./test"],
	  "scripts": ["./scripts"]
	},
	"sourceMap": true,
	"esModuleInterop": true,
	"experimentalDecorators": true,
	"emitDecoratorMetadata": true,
	"skipLibCheck": true,
	"forceConsistentCasingInFileNames": true
  }
}
