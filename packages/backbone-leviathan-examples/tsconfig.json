{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "es5", "es6", "es7"],
		"moduleResolution": "node",
		"jsx": "react",
		"jsxFactory": "Leviathan.DOM.create",
		"inlineSourceMap": true,
		"baseUrl": "./",
		"noEmit": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"experimentalDecorators": true
	},
	"include": [
		"./js/*.tsx",
		"./server/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"config"
	]
}
