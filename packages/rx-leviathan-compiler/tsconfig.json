{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "es5", "es6", "es7"],
		"moduleResolution": "node",
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"typeRoots": [
			"node_modules/@types",
			"@types"
		],
		"types": [
			"node",
			"mocha",
			"sinon",
			"chai",
			"global"
		]
	},
	"include": [
		"./lib/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"config"
	]
}
