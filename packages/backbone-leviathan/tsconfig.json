{
	"compilerOptions": {
		"module": "esnext",
		"lib": ["dom", "scriptHost", "esnext"],
		"target": "es5",
		"sourceMap": false,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"baseUrl": "./",
		"typeRoots": ["./@types"],
		"moduleResolution": "node"
	},
	"exclude": [
		"node_modules",
		"./dist",
		"./config",
		"./test"
	]
}
